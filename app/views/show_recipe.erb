<h1><%= @recipe.title %></h1>
<p><%= @recipe.description %></p>
<ul class="ingredient-list">
  <% @recipe.ingredients.split("\n").each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>

<a href="/edit_recipe_form?id=<%= @recipe.id %>">Edit</a> | <a href="/delete_recipe?id=<%= @recipe.id %>">Delete</a> | <a href="/all_recipes">Back to all recipes</a>
